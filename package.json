{
  "name": "debian-repro-dashboard",
  "version": "2.0.0",
  "description": "Debian reproducibility verification dashboard",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint dashboard/script.js",
    "validate:json": "ajv validate -s tests/schemas/report.schema.json -d dashboard/data/latest.json",
    "validate:csv": "csvlint dashboard/data/latest.csv"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "dashboard/script.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "ajv": "^8.12.0",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheurich/debian-repro.git"
  },
  "author": "Shiloh Heurich <sheurich@fastly.com>",
  "license": "MIT"
}
